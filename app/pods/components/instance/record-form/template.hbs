<table class="record-table">
  <tbody>
    {{#unless record.isNew}}
      <tr class="record-field">
        <td class="record-key">id:</td>
        <td class="record-value">{{record.id}}</td>
      </tr>
    {{/unless}}
    <tr class="record-field">
      <td class="record-key">flight_id:</td>
      <td class="record-value form-inline">
        {{#x-select value=record.flight_id on-change=(action (mut record.flight_id)) class="form-control" as |xs|}}
          {{#xs.option value=null}}none selected{{/xs.option}}
          {{#each flights as |p|}}
            {{#xs.option value=p.intid}}{{p.name}} (id: {{p.id}}){{/xs.option}}
          {{/each}}
        {{/x-select}}
      </td>
    </tr>
    <tr class="record-field">
      <td class="record-key">date:</td>
      <td class="record-value form-inline">
        {{date-picker date=record.date valueFormat="YYYY-MM-DD" class="form-control"}}
      </td>
    </tr>
    <tr class="record-field">
      <td class="record-key">is_cancelled:</td>
      <td class="record-value">
        <div class="form-check">
          {{#radio-button value=true groupValue=record.is_cancelled}}
            true
          {{/radio-button}}
        </div>
        <div class="form-check">
          {{#radio-button value=false groupValue=record.is_cancelled}}
            false
          {{/radio-button}}
        </div>
      </td>
    </tr>
    <tr class="record-field">
      <td class="record-key">info:</td>
      <td class="record-value">
        {{textarea class="form-control" value=record.info}}
      </td>
    </tr>
    {{#unless record.isNew}}
      <tr class="record-field">
        <td class="record-key">user_id:</td>
        <td class="record-value">{{record.user_id}}</td>
      </tr>
      <tr class="record-field">
        <td class="record-key">created_at:</td>
        <td class="record-value">"{{record.created_at}}"</td>
      </tr>
      <tr class="record-field">
        <td class="record-key">updated_at:</td>
        <td class="record-value">"{{record.updated_at}}"</td>
      </tr>
    {{/unless}}
  </tbody>
</table>

<p class="record-controls mt-3">
  <button type="button" class="btn btn-info" {{action "saveButtonWasPressed"}}>
    <i class="far fa-save"></i>&nbsp; Save
  </button>

  <button type="button" class="btn btn-secondary" {{action "cancelButtonWasPressed"}}>
    <i class="fas fa-times"></i>&nbsp; Cancel
  </button>
</p>