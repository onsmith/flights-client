<h1 class="text-center mt-3 mb-4">
  Flights API Login
</h1>

{{#if hasErrorMessage}}
  <p class="text-danger">{{errorMessage}}</p>
{{/if}}

<form class="login-form" {{action "loginFormWasSubmitted" on="submit"}}>
  <div class="form-group">
    <label for="login-form-username">Username</label>
    {{input
      type="text"
      class="form-control"
      id="login-form-username"
      placeholder="Enter your username"
      value=username
    }}
  </div>
  <div class="form-group">
    <label for="login-form-password">Password</label>
    {{input
      type="password"
      class="form-control"
      id="login-form-password"
      placeholder="Enter your password"
      value=password
    }}
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-info btn-lg btn-block" disabled={{isSubmitting}}>
      Log In
    </button>

    <p class="text-center mt-3">
      {{link-to "Or click here to create a new account." "signup"}}
    </p>
  </div>
</form>