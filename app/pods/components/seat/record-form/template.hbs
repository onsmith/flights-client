<table class="record-table">
  <tbody>
    {{#unless record.isNew}}
      <tr class="record-field">
        <td class="record-key">id:</td>
        <td class="record-value">{{record.id}}</td>
      </tr>
    {{/unless}}
    <tr class="record-field">
      <td class="record-key">plane_id:</td>
      <td class="record-value form-inline">
        {{#x-select value=record.plane_id on-change=(action (mut record.plane_id)) class="form-control" as |xs|}}
          {{#xs.option value=null}}none selected{{/xs.option}}
          {{#each planes as |p|}}
            {{#xs.option value=p.intid}}{{p.name}} (id: {{p.id}}){{/xs.option}}
          {{/each}}
        {{/x-select}}
      </td>
    </tr>
    <tr class="record-field">
      <td class="record-key">row:</td>
      <td class="record-value form-inline">
        {{input type="number" value=record.row class="form-control"}}
      </td>
    </tr>
    <tr class="record-field">
      <td class="record-key">number:</td>
      <td class="record-value">
        {{input value=record.number class="form-control"}}
      </td>
    </tr>
    <tr class="record-field">
      <td class="record-key">cabin:</td>
      <td class="record-value">
        {{input value=record.cabin class="form-control"}}
      </td>
    </tr>
    <tr class="record-field">
      <td class="record-key">is_window:</td>
      <td class="record-value">
        <div class="form-check">
          {{#radio-button value=true groupValue=record.is_window}}
            true
          {{/radio-button}}
        </div>
        <div class="form-check">
          {{#radio-button value=false groupValue=record.is_window}}
            false
          {{/radio-button}}
        </div>
      </td>
    </tr>
    <tr class="record-field">
      <td class="record-key">is_aisle:</td>
      <td class="record-value">
        <div class="form-check">
          {{#radio-button value=true groupValue=record.is_aisle}}
            true
          {{/radio-button}}
        </div>
        <div class="form-check">
          {{#radio-button value=false groupValue=record.is_aisle}}
            false
          {{/radio-button}}
        </div>
      </td>
    </tr>
    <tr class="record-field">
      <td class="record-key">is_exit:</td>
      <td class="record-value">
        <div class="form-check">
          {{#radio-button value=true groupValue=record.is_exit}}
            true
          {{/radio-button}}
        </div>
        <div class="form-check">
          {{#radio-button value=false groupValue=record.is_exit}}
            false
          {{/radio-button}}
        </div>
      </td>
    </tr>
    <tr class="record-field">
      <td class="record-key">info:</td>
      <td class="record-value">
        {{textarea class="form-control" value=record.info}}
      </td>
    </tr>
    {{#unless record.isNew}}
      <tr class="record-field">
        <td class="record-key">user_id:</td>
        <td class="record-value">{{record.user_id}}</td>
      </tr>
      <tr class="record-field">
        <td class="record-key">created_at:</td>
        <td class="record-value">"{{record.created_at}}"</td>
      </tr>
      <tr class="record-field">
        <td class="record-key">updated_at:</td>
        <td class="record-value">"{{record.updated_at}}"</td>
      </tr>
    {{/unless}}
  </tbody>
</table>

<p class="record-controls mt-3">
  <button type="button" class="btn btn-info" {{action "saveButtonWasPressed"}}>
    <i class="far fa-save"></i>&nbsp; Save
  </button>

  <button type="button" class="btn btn-secondary" {{action "cancelButtonWasPressed"}}>
    <i class="fas fa-times"></i>&nbsp; Cancel
  </button>
</p>