<main class="flights-page content-card full-page-max-width">
  <h1 class="mt-3 mb-3">
    Flights
    <small class="text-muted d-none d-sm-inline">Resource Page</small>
  </h1>

  <p class="text-right">
    <button type="button" class="btn btn-success" {{action "createButtonWasPressed"}}>
      <i class="fas fa-plus"></i>
      New
    </button>
  </p>

  {{#each records as |record|}}
    {{flight/record-manager record}}
  {{else}}
    <h4 class="text-muted text-center font-italic mb-4 mt-4">Your database currently has no flights.</h4>
  {{/each}}
</main>